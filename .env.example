# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/meteo_agricole
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=meteo_agricole

# OpenWeather API (https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/3.0

# FAO API
FAO_API_KEY=your_fao_api_key_here
FAO_BASE_URL=https://fenixservices.fao.org/faostat/api/v1

# Copernicus (optionnel)
COPERNICUS_API_KEY=your_copernicus_key_here

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=meteo_agricole

# FastAPI
APP_ENV=development
SECRET_KEY=your_secret_key_here_change_in_production
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Airflow
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Redis (pour Airflow Celery si besoin)
REDIS_HOST=redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO
