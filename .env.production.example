# ==================== CONFIGURATION PRODUCTION ====================
# Copier ce fichier vers .env.production et remplir les valeurs réelles
# NE JAMAIS committer le fichier .env.production dans Git !

# ==================== BASE DE DONNÉES ====================
POSTGRES_USER=meteo_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=meteo_agricole

# ==================== REDIS ====================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ==================== SÉCURITÉ ====================
# Générer avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_SECRET_KEY_32_CHARS_MIN

# Générer avec: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=CHANGE_ME_FERNET_KEY

# ==================== APIs EXTERNES ====================
# OpenWeather API (gratuit: https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# FAO API (optionnel)
FAO_API_KEY=your_fao_api_key_here

# ==================== TWILIO (SMS/WhatsApp) ====================
# Compte gratuit: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ==================== DOMAINE ====================
DOMAIN=votre-domaine.com
DOMAIN_EMAIL=admin@votre-domaine.com

# ==================== MLFLOW ====================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=meteo_agricole_prod

# ==================== LOGGING ====================
LOG_LEVEL=INFO
